[Unit]
Description=Direct X login for user %i
After=x@vt7.service systemd-user-sessions.service tornado.service
Requires=tornado.service
Wants=x@vt7.service
Conflicts=getty@tty7.service
#After=network.target network-online.target nss-lookup.target
#Wants=network-online.target

[Service]
User=%i
WorkingDirectory=~
TTYPath=/dev/tty7
PAMName=login
Environment=XDG_SESSION_TYPE=x11 DISPLAY=:0
ExecStart=/usr/bin/bash -l .xinitrc

[Install]
WantedBy=graphical.target
